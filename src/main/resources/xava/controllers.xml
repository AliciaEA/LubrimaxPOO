<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<!-- 
Controllers doc: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_en.html

Default controllers included in OpenXava (you can extend from them):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Examples of controllers (from test application):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controllers>
    <controller name="DashboardController">
        <action name="iniciar" on-init="true" hidden="true"
                class="org.example.LubrimaxPOO.actions.IniciarDashboardAction"/>
        <action name="refrescar" image="images/refresh.gif"
                class="org.example.LubrimaxPOO.actions.IniciarDashboardAction"/>
    </controller>
    <controller name="SeguridadGlobal">
        <action name="init" on-init="true" hidden="true"
                class="org.example.LubrimaxPOO.actions.SeguridadModulosAction"/>
    </controller>
    <controller name="Venta">
        <extends controller="Typical"/>
        <action name="procesar" mode="detail" confirm="true"
                class="org.example.LubrimaxPOO.actions.ProcesarVentaAction"
                image="images/execute.gif"/>
    </controller>
    <controller name="Compra">
        <extends controller="Typical"/>
        <action name="procesar" mode="detail" confirm="true"
                class="org.example.LubrimaxPOO.actions.ProcesarCompraAction"
                image="images/execute.gif"/>
    </controller>

    <controller name="SignIn">
        <action name="init" on-init="true" hidden="true"
                class="com.openxava.naviox.actions.InitSignInAction"/>
        <action name="signIn"
                class="org.example.LubrimaxPOO.actions.DarAccesoAction"/>
    </controller>

    <!-- Environment variable:
    <env-var name="LubrimaxPOO_DEFAULT_YEAR" value="2015"/> 
    -->
    
    <!-- Session object:
    <object name="LubrimaxPOO_activeYear" class="java.lang.Integer" value="2015" 
    	    scope="global"/>    
    -->
    
